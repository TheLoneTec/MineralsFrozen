  <ThingDef ParentName="FrozenWallBase" Class="MineralsFrozen.ThingDef_FrozenWallBase">
    <defName>BlueIceWall</defName>
    <label>Blue Ice Wall</label>
    <description>An impassable wall made of a strange blue ice. It is much tougher than pure ice and is capable of holding up a roof. It will melt when above 5C and will slowly heal when exposed to light and below 0C. It cannot heal if damaged more than 80%.</description>
    <graphicData>
			<texPath>Things/Rock/HewnRockWall</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<linkType>CornerFiller</linkType>
			<color>(210,210,255)</color>
			<linkFlags>
				<li>Wall</li>
        <li>Rock</li>
			</linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <filthLeaving></filthLeaving>
    <uiIconPath>Things/Building/Linked/WallSmooth_MenuIcon</uiIconPath>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>2.2</glowRadius>
        <glowColor>(170,170,255,0)</glowColor>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>600</MaxHitPoints>
      <WorkToBuild>700</WorkToBuild>
      <Flammability>0.0</Flammability>
      <Beauty>4</Beauty>
    </statBases>
		<costList>
			<IceBlocks>5</IceBlocks>
			<CrushedStone>20</CrushedStone>
			<Coldstone>1</Coldstone>
		</costList>
		<researchPrerequisites>
			<li>FrozenConstructionVI</li>
		</researchPrerequisites>
		<meltTemp>5</meltTemp>
		<healTemp>0</healTemp>
		<maxHealHP>0.75</maxHealHP>
		<healRate>0.7</healRate>
  </ThingDef>
  
  <ThingDef ParentName="FrozenWallBase" Class="MineralsFrozen.ThingDef_FrozenWallBase">
    <defName>GreenIceWall</defName>
    <label>Green Ice Wall</label>
    <description>An impassable wall made of a strange glowing green ice. It is much tougher than pure ice and is capable of holding up a roof. It will melt when above 10C and will slowly heal below 5C. It cannot heal if damaged more than 60%.</description>
    <graphicData>
			<texPath>Things/Rock/SmoothedRockWall</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<linkType>CornerFiller</linkType>
			<color>(200,255,250)</color>
			<linkFlags>
				<li>Wall</li>
        <li>Rock</li>
			</linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <filthLeaving></filthLeaving>
    <uiIconPath>Things/Building/Linked/WallSmooth_MenuIcon</uiIconPath>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3.0</glowRadius>
        <glowColor>(200,255,250,0)</glowColor>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>700</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>0.0</Flammability>
      <Beauty>6</Beauty>
    </statBases>
		<costList>
			<IceBlocks>4</IceBlocks>
			<ConcreteResource>20</ConcreteResource>
			<Coldstone>1</Coldstone>
			<Glowstone>1</Glowstone>
			<Biomatter>2</Biomatter>
		</costList>
		<researchPrerequisites>
			<li>FrozenConstructionV</li>
		</researchPrerequisites>
		<meltTemp>10</meltTemp>
		<healTemp>5</healTemp>
		<maxHealHP>0.6</maxHealHP>
		<healRate>1.0</healRate>
  </ThingDef>
  
